<odoo>
    <record model="ir.module.category" id="gamedesk_management">
        <field name="name">Gamedesk management</field>
        <field name="description">Access to Gamedesk management module</field>
        <field name="sequence">20</field>
    </record>

    <record id="gamedesk_seeker" model="res.groups">
        <field name="name">Seeker</field>
        <field name="category_id" ref="gamedesk_management"/>
    </record>

    <record id="gamedesk_gm" model="res.groups">
        <field name="name">Game Master</field>
        <field name="category_id" ref="gamedesk_management"/>
	    <field name="implied_ids" eval="[(4, ref('gamedesk_seeker'))]"/>
    </record>

    <record id="gamedesk_administrator" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="gamedesk_management"/>
	    <field name="implied_ids" eval="[(4, ref('gamedesk_gm'))]"/>
    </record>
</odoo>
