
<odoo>
    <data>
        <record id="gamedesk_res_partner_inherit" model="ir.ui.view">
            <field name="name">gamedesk_res_partner_inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Gamedesk">
                        <group>
                            <group>
                                <field name="is_dungeon_master" widget="boolean_toggle" />
                            </group>
                            <group>
                                <field name="is_dungeon_seeker" widget="boolean_toggle" />
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>